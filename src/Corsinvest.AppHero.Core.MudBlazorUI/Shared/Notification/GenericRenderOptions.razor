@using MudBlazor.Extensions.Components.ObjectEdit

@inherits AHModuleOptionsBase<TOptions>

@typeparam TOptions
@typeparam T

<NotificationChannelsOptionsGrid T="T" Options="@Options">
    <Row>
        <MudGrid>
            <MudItem md="12">
                <MudExObjectEditForm T="T"
                                     Value="@context"
                                     ShowCancelButton="false"
                                     ShowSaveButton="false"
                                     Localizer="L"
                                     AutoHideDisabledFields="true"
                                     GroupingStyle="GroupingStyle.DefaultExpansionPanel"
                                     GroupElevation="1"
                                     DefaultGroupName="General"
                                     AutoSkeletonOnLoad="true"
                                     AddScrollToTop="false"
                                     ConfigureMetaInformationAlways="true"
                                     MetaConfiguration="@Configure" />
            </MudItem>
        </MudGrid>
    </Row>
</NotificationChannelsOptionsGrid>