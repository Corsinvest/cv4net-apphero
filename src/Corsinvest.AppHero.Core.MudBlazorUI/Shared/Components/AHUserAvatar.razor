@inherits MudComponentBase

<MudAvatar Style="@Style" Class="@Class">
    <MudImage @ref="@RefImage" Src="@User?.ProfileImageUrl" />

    @if (string.IsNullOrEmpty(User?.ProfileImageUrl))
    {
        @User?.AvatarName
    }
</MudAvatar>

@code {
    [Parameter] public ApplicationUser User { get; set; } = default!;

    private MudImage RefImage { get; set; } = default!;
}
