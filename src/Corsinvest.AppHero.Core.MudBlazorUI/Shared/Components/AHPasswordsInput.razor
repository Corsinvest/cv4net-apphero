@inherits MudComponentBase

<MudForm Model="@Model" @ref="@RefForm" Validation="@ModelValidator.ValidateValue" IsValidChanged="@IsValidChangedInt" ValidationDelay="0" FieldChanged="FieldChanged">
    <MudGrid>
        @if (!string.IsNullOrEmpty(Label))
        {
            <MudItem>
                <MudText Typo="Typo.caption">
                    @Label
                </MudText>
            </MudItem>
        }

        <MudItem md="12">
            <MudPasswordField Immediate="true"
                              Required="true"
                              Label="@L["Password"]"
                              @bind-Value="Model.Password"
                              For="@(() => Model.Password)"
                              Variant="Variant.Text"
                              Class="mt-4" />
        </MudItem>

        <MudItem md="12">
            <MudPasswordField Immediate="true"
                              Required="true"
                              Label="@L["Confirm Password"]"
                              @bind-Value="Model.ConfirmPassword"
                              For="@(() => Model.ConfirmPassword)"
                              Variant="Variant.Text"
                              Class="mt-4" />
        </MudItem>
    </MudGrid>
</MudForm>
