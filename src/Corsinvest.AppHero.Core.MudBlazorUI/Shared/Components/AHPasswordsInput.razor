@inherits MudDebouncedInput<string>

<MudForm Model="@Model" Validation="@(ModelValidator.ValidateValue)" IsValidChanged="@IsValidChangedInt">    
    <MudGrid>
        @if (!string.IsNullOrEmpty(Label))
        {
            <MudItem>
                <MudText Typo="Typo.caption">@Label</MudText>
            </MudItem>
        }

        <MudItem md="12">
            <MudPasswordField Immediate
                             Label="@L["Password"]"
                             @bind-Value="Model.Password"
                             For="@(() => Model.Password)"
                             Variant="Variant.Text"
                             Class="mt-4" />
        </MudItem>

        <MudItem md="12">
            <MudPasswordField Immediate
                             Label="@L["Confirm Password"]"
                             @bind-Value="Model.ConfirmPassword"
                             For="@(() => Model.ConfirmPassword)"
                             Variant="Variant.Text"
                             Class="mt-4" />
        </MudItem>
    </MudGrid>
</MudForm>