@inherits PropertyColumn<T,TProperty>

@typeparam T
@typeparam TProperty

@code
{
    private RenderFragment RenderFormattedValue(CellContext<T> context) => __builder =>
    {
        @GetFormattedString(GetValue<TProperty>(context.Item!)!)
    };

    private RenderFragment RenderBool(CellContext<T> context) => __builder =>
    {
        <MudCheckBox Checked="@(GetValue<bool>(context.Item!))" ReadOnly />
    };
}