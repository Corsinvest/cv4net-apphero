@inherits PropertyColumn<T,TProperty>

@typeparam T
@typeparam TProperty

@code
{
    private RenderFragment RenderFormattedValue(CellContext<T> context) => __builder =>
    {
        @GetFormattedString(ClassHelper.GetValue<TProperty>(context.Item!, PropertyName!)!)
    };

    private RenderFragment RenderBool(CellContext<T> context) => __builder =>
    {
        <MudCheckBox Checked="@(ClassHelper.GetValue<bool>(context.Item!, PropertyName!))" ReadOnly />
    };
}