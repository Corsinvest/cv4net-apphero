@inherits AHComponentBase

@typeparam T

<AHDataGridToolBarRead T="T" DataGridManager="DataGridManager">
    <ToolBarContentBefore>
        @ToolBarContentBefore

        @if (PermissionCreate != null)
        {
            <AHPermissionButtonIcon Permission="PermissionCreate" OnClick="@DataGridManager.NewAsync" />
        }

        @if (PermissionDelete != null)
        {
            <AHPermissionButtonIcon Permission="PermissionDelete"
                            OnClick="@(async () => await DataGridManager.DeleteSelectedItemsAsync(true))"
                            Disabled="@(!DataGridManager.ExistsSelection)" />
        }

        @ToolBarContentAfter
    </ToolBarContentBefore>
</AHDataGridToolBarRead>